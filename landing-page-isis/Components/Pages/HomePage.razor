@page "/"
@using landing_page_isis.Components.Layout
@using landing_page_isis.Components.Misc
@layout MainLayout

<div id="hero" class="d-flex align-center justify-center" style="min-height: 100vh; width: 100%;">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudPaper Elevation="0" Class="bg-transparent">
            <MudGrid Justify="Justify.Center">
                <MudItem xs="12" md="10" Class="d-flex flex-column align-center text-center">
                    <MudText Typo="Typo.h6" Color="Color.Secondary" Style="letter-spacing: 4px; font-weight: 300;"
                             Class="mb-4">
                        AQUI E O SEU ESPACO
                    </MudText>

                    <MudText Typo="Typo.h1" Color="Color.Secondary" Style="font-weight: 900; line-height: 1.1;"
                             Class="mb-8">
                        Sua saúde em boas mãos
                    </MudText>

                    <MudText Typo="Typo.h5" Align="Align.Center"
                             Style="font-weight: 300; line-height: 1.6; color: #555; max-width: 750px;" Class="mb-12">
                        Investir em psicoterapia é o primeiro passo para uma vida mais leve e consciente.
                        Vamos juntos transformar a forma como você lida com suas emoções e desafios?
                    </MudText>

                    <div class="d-flex flex-column align-center">
                        <MudText Typo="Typo.h6" Class="mb-4" Style="font-weight: 400; color: #666;">Agende sua consulta
                            agora mesmo
                        </MudText>
                        <MudButton Variant="Variant.Filled"
                                   Style="background-color: #284B32; color: white; padding: 18px 48px; font-size: 1.1rem;"
                                   Size="Size.Large" Class="rounded-lg shadow-xl">
                            Iniciar Atendimento
                        </MudButton>
                    </div>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </MudContainer>
</div>

<div id="separator" class="d-flex justify-center">
    <MudImage Src="isis-content-separator.png" Height="120" Alt="Separador Isis Vitória"/>
</div>

<div id="sobre" class="d-flex align-center justify-center" style="min-height: 100vh; width: 100%;">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudPaper Elevation="0" Class="bg-transparent">
            <MudGrid AlignItems="AlignItems.Center" Spacing="10">
                <MudItem xs="12" md="7" Class="d-flex flex-column justify-center pe-md-12">
                    <MudText Typo="Typo.h6" Color="Color.Secondary"
                             Style="letter-spacing: 2px; font-weight: 300; margin-bottom: 10px">
                        CONHEÇA MINHA TRAJETÓRIA
                    </MudText>
                    <MudText Typo="Typo.h2" Color="Color.Secondary" Class="mb-4" Style="font-weight: 700;">
                        Sobre Mim
                    </MudText>

                    <div style="width: 60px; height: 4px; background-color: #284B32; border-radius: 2px;"
                         class="mb-8"></div>

                    <MudText Typo="Typo.h6" Class="text-justify mb-6"
                             Style="font-weight: 400; line-height: 1.8; color: #444; font-size: 1.2rem;">
                        Acredito que o desenvolvimento humano é um processo contínuo e profundamente enraizado nas
                        interações sociais e na cultura que nos rodeia. Pautada na <b>Abordagem Histórico-Cultural</b>,
                        meu trabalho clínico busca compreender o indivíduo não de forma isolada, mas a partir de sua
                        história de vida e das mediações que moldaram sua subjetividade.
                    </MudText>

                    <MudStack Row="true" Spacing="3" Class="mt-4 flex-wrap">
                        <MudChip T="string" Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Secondary"
                                 Variant="Variant.Text" Style="font-weight: 500;">Ética
                        </MudChip>
                        <MudChip T="string" Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Secondary"
                                 Variant="Variant.Text" Style="font-weight: 500;">Acolhimento
                        </MudChip>
                        <MudChip T="string" Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Secondary"
                                 Variant="Variant.Text" Style="font-weight: 500;">Ciência
                        </MudChip>
                    </MudStack>
                </MudItem>

                <MudItem xs="12" md="5" Style="background-color: #7E0F20; overflow: hidden;"
                         Class="rounded-xl d-flex align-end justify-center pa-0">
                    <MudImage Src="isis-photo.png" Alt="Isis Vitória" Class="rounded-xl" Fluid="true"
                              Style="width: 100%; object-fit: cover; display: block;"/>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </MudContainer>
</div>

<div id="servicos" class="d-flex align-center justify-center"
     style="min-height: 100vh; width: 100%; background-color: #284B32; padding: 60px 0;">
    <MudContainer MaxWidth="MaxWidth.Large">
        <div class="d-flex flex-column align-center text-center mb-12">
            <MudText Typo="Typo.h6" Style="letter-spacing: 3px; color: rgba(255,255,255,0.7); font-weight: 300;">COMO
                POSSO AJUDAR
            </MudText>
            <MudText Typo="Typo.h2" Style="color: white; font-weight: 800; line-height: 1.1;">Meus Serviços</MudText>
            <div style="width: 80px; height: 4px; background-color: #7E0F20; border-radius: 2px;" class="mt-4"></div>
        </div>

        <MudGrid Spacing="6">
            <MudItem xs="12" md="4">
                <MudPaper Elevation="0" Class="pa-10 rounded-xl d-flex flex-column align-center text-center"
                          Style="background-color: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); height: 100%;">
                    <MudIcon Icon="@Icons.Material.Filled.SelfImprovement" Style="color: white;" Size="Size.Large"
                             Class="mb-4"/>
                    <MudText Typo="Typo.h5" Style="color: white; font-weight: 700;" Class="mb-4">Psicoterapia
                        Individual
                    </MudText>
                    <MudText Typo="Typo.body1" Style="color: rgba(255,255,255,0.8); line-height: 1.7;">
                        Um espaço seguro para explorar sua subjetividade e ressignificar sua história através da
                        abordagem histórico-cultural.
                    </MudText>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudPaper Elevation="0" Class="pa-10 rounded-xl d-flex flex-column align-center text-center"
                          Style="background-color: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); height: 100%;">
                    <MudIcon Icon="@Icons.Material.Filled.AutoGraph" Style="color: white;" Size="Size.Large"
                             Class="mb-4"/>
                    <MudText Typo="Typo.h5" Style="color: white; font-weight: 700;" Class="mb-4">Desenvolvimento e
                        Autonomia
                    </MudText>
                    <MudText Typo="Typo.body1" Style="color: rgba(255,255,255,0.8); line-height: 1.7;">
                        Foco na ampliação das potencialidades e na conquista de maior consciência sobre suas ações no
                        mundo.
                    </MudText>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudPaper Elevation="0" Class="pa-10 rounded-xl d-flex flex-column align-center text-center"
                          Style="background-color: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); height: 100%;">
                    <MudIcon Icon="@Icons.Material.Filled.Groups" Style="color: white;" Size="Size.Large" Class="mb-4"/>
                    <MudText Typo="Typo.h5" Style="color: white; font-weight: 700;" Class="mb-4">Grupos de Estudos
                    </MudText>
                    <MudText Typo="Typo.body1" Style="color: rgba(255,255,255,0.8); line-height: 1.7;">
                        Mediação de conhecimento e discussões sobre a psicologia histórico-cultural e suas aplicações
                        práticas.
                    </MudText>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudContainer>
</div>

<LeadForm/>

<style>
    html {
        scroll-behavior: smooth;
    }

    section {
        scroll-margin-top: 80px;
    }
</style>
