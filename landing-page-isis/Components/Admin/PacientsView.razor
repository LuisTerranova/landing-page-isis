@page "/admin/pacientes"
@using landing_page_isis.Components.Layout
@using landing_page_isis.Components.Misc
@using landing_page_isis.core.Models
@layout DashboardLayout
@rendermode InteractiveServer


<AdminShell>
    <MudText Typo="Typo.h4" Class="mb-6" Color="Color.Secondary" Style="font-weight: 800">
        PACIENTES
    </MudText>
    
    <GenericTable TItem="Pacient" 
                ServerData="@ServerReload" 
                OnEdit="@(p => EditPacient(p))" 
                OnDelete="@(p => DeletePacient(p))">
    
        <HeaderColumns>
            <MudTh>Nome</MudTh>
            <MudTh>E-mail</MudTh>
            <MudTh>Telefone</MudTh>
        </HeaderColumns>

        <RowColumns>
            <MudTd DataLabel="Nome">@context.Name</MudTd>
            <MudTd DataLabel="E-mail">@context.Email</MudTd>
            <MudTd DataLabel="Telefone">@context.Phone</MudTd>
        </RowColumns>

        <CustomActions>
            
        </CustomActions>
    </GenericTable>
    
</AdminShell>

